<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="author" content="David Davó Laviña">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('global') }}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        <main role="main" class="flex-shrink-0 mb-3">
            {% block header %}{% endblock %}
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </main>
        {% block footer %}{% include '_footer.twig' %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('global') }}
        {% endblock %}
    </body>
</html>
